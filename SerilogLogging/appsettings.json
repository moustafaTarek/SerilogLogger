{
  "SerilogConfigurations": {
    "DataBaseConfigurations": {
      "LogToDataBase": true,
      "DataBaseProvider": "Postgres",
      "MiniumunLogLevel": "Information",
      "DbConnection": "User ID=postgres;Password=postgres;Host=localhost;Port=5432;database=serilog;"
    },
    "ConsoleConfigurations": {
      "LogToConsole": true,
      "MiniumunLogLevel": "Error"
    },
    "FileConfigurations": {
      "LogToFile": true,
      "FilePath" : "../LogsFolder",
      "MiniumunLogLevel": "Error"
    },
    "MailConfigurations": {
      "LogToMail":  false
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft.AspNetCore": "Trace"
    }
  },
  "AllowedHosts": "*"
}
